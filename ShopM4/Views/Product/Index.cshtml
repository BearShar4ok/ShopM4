@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product";
}

<h1>Products</h1>

<p>
    <a class="btn btn-dark" asp-controller="Product" asp-action="CreateEdit"><i class="fa-solid fa-plus"></i> Create Product</a>
</p>

@if (Model.Count() > 0)
{
         <table class="table table-bordered table-striped" border="1" style="width:100%; background-color:white; border:solid;border-color:#e2c281">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                        <tr>
                            <td width="80%">@item.Name</td>
                            <td width="10%">@item.Price</td>
                            <td width="10%">
                                <div style="display: flex; justify-content:space-around">
                                    <a class="btn btn-primary" asp-route-Id="@item.Id" asp-controller="Product" asp-action="CreateEdit"><i class="fa-solid fa-pen"></i></a>
                                    <a class="btn btn-danger" asp-route-Id="@item.Id" asp-controller="Product" asp-action="Delete"><i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}
else
{
        <p>No products</p>
}