@model IEnumerable<MyModel>
@{
    ViewData["Title"] = "MyModel";
}
<h1>Hello MyModel Category</h1>

<p>
    <a class="btn btn-primary" asp-controller="MyModel" asp-action="Create">Create Category</a>
</p>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" border="1" style="width:100%; background-color:white; border:solid;border-color:#e2c281">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                    <td width="80%">@item.Name</td>
                    <td width="10%">@item.Number</td>
                    <td width="10%">
                        <div style="display: flex; justify-content:space-around">
                                    <!--Edit-->
                            <a class="btn btn-primary" asp-controller="MyModel" asp-action="Edit"
                                asp-route-Id="@item.Id"><i class="fa-solid fa-square-plus"></i></a>
                                    <!--Delete-->
                                <a class="btn btn-danger" asp-controller="MyModel" asp-action="Delete"
                            asp-route-Id="@item.Id"> <i class="fa-solid fa-square-minus"></i></a>
                        </div>
                    </td>
            </tr>
            }
      </tbody>
    </table>
}