@model ShopM4.Models.Product

<div class="card filter @Model.Category.Name.Replace(" ","_")" style="display:flex; float:left; width: 18rem;
                        height:25rem; margin: 5px; border: groove; border-color:peachpuff; border-width:2px;">
  <img src="@PathManager.ImageProductPath@Model.Image" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">@Model.Name</h5>
    <p class="card-text">@Model.ShortDescription</p>
    <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Detail</a>
  </div>
</div>